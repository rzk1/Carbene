currentDir=`pwd`
projName='TEST'
cp2kInp='start'
action=1 # 1-submit, 2-analyze
atom1=176
atom2=211
natoms=212
hours=12

intI=0
nlines=$((natoms+2))

for idist in `seq 3.90 -0.3 1.80`
do

 dist=`printf "%04.2f" $idist`
 jobID=$dist
 intI=$((intI+1))
 strI=`printf "%03d" $intI`

 if [ $action == 1 ]
 then

  echo $dist $strI
  if [ "$intI" -gt "5" ]; then
   sed -e "s/_PR1_/$projName/g" -e "s/_I1_/$strI/g" -e "s/_N1_/$nlines/g" action-post.templ > action-post-$strI.sh
  fi

 fi

done

